<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius6_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_17"
        android:text="修改购买数量"
        android:textColor="@color/tcolor_33"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/shape_radius3_border">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/iv_less"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:background="@null"
            android:padding="@dimen/dp_6"
            android:src="@drawable/shop_cart_add_big" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_34"
            android:background="@color/border_555" />

        <EditText
            android:id="@+id/tv_num"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_34"
            android:background="#00000000"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_34"
            android:background="@color/border_555" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:background="@null"
            android:padding="@dimen/dp_6"
            android:src="@drawable/shop_cart_sub_big" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/tcolor_33"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_radius6_fb1111_right_bottom"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>